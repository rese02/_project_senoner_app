{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user within the Senoner Sarteur Digital application.",
      "properties": {
        "id": { "type": "string", "description": "Firebase UID" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["customer", "employee", "admin"] },
        "points": { "type": "number" },
        "rewards": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "date": { "type": "string", "format": "date-time" }
            },
            "required": ["id", "name", "date"]
          }
        },
        "coupons": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "type": { "type": "string" },
              "value": { "type": "number" },
              "description": { "type": "string" }
            },
            "required": ["id", "type", "description"]
          }
        },
        "lastWheelSpin": { "type": "string", "format": "date-time", "description": "Timestamp of the last wheel spin." }
      },
      "required": ["id", "firstName", "lastName", "email", "role"]
    },
    "Category": {
      "title": "Category",
      "type": "object",
      "description": "Represents a product category.",
      "properties": {
        "id": { "type": "string", "description": "Auto-generated ID" },
        "name": { "type": "string" },
        "image": { "type": "string", "format": "uri" },
        "pickupDays": { "type": "array", "items": { "type": "string" } },
        "products": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "image": { "type": "string", "format": "uri" },
              "orderOptions": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "type": { "type": "string" },
                    "value": { "type": "number" }
                  },
                  "required": ["type", "value"]
                }
              }
            },
            "required": ["id", "name"]
          }
        }
      },
      "required": ["id", "name"]
    },
    "PreOrder": {
      "title": "PreOrder",
      "type": "object",
      "description": "Represents a pre-order placed by a customer.",
      "properties": {
        "id": { "type": "string" },
        "customerId": { "type": "string", "description": "Firebase UID of the customer." },
        "customerName": { "type": "string" },
        "details": { "type": "string", "description": "e.g., 'Sushi-Box Groß, 2 Stück'" },
        "date": { "type": "string", "format": "date" },
        "status": { "type": "string", "enum": ["pending", "ready", "collected"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "totalPrice": { "type": "number" }
      },
      "required": ["id", "customerId", "customerName", "details", "date", "status", "createdAt", "totalPrice"]
    },
    "AppConfig": {
      "title": "AppConfig",
      "type": "object",
      "description": "Application-wide configuration settings.",
      "properties": {
        "seasonalHighlightText": { "type": "string" },
        "isWheelOfFortuneActive": { "type": "boolean" },
        "wheelConfig": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "value": { "type": "number" },
              "probability": { "type": "number" }
            },
            "required": ["id", "name", "probability"]
          }
        }
      }
    },
    "Notification": {
      "title": "Notification",
      "type": "object",
      "description": "Represents a push notification.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string", "description": "Firebase UID of the user." },
        "message": { "type": "string" },
        "type": { "type": "string", "enum": ["order", "reward", "general"] },
        "read": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "userId", "message", "type", "read", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/entities/User" },
          "description": "Stores user profiles and related data."
        }
      },
      {
        "path": "/users/{userId}/preorders/{orderId}",
        "definition": {
          "entityName": "PreOrder",
          "schema": { "$ref": "#/entities/PreOrder" },
          "description": "Sub-collection for a user's pre-orders."
        }
      },
      {
        "path": "/categories/{categoryId}",
        "definition": {
          "entityName": "Category",
          "schema": { "$ref": "#/entities/Category" },
          "description": "Stores product categories and their products."
        }
      },
      {
        "path": "/appConfig/main",
        "definition": {
          "entityName": "AppConfig",
          "schema": { "$ref": "#/entities/AppConfig" },
          "description": "Singleton document for global app configuration."
        }
      },
      {
        "path": "/notifications/{notificationId}",
        "definition": {
          "entityName": "Notification",
          "schema": { "$ref": "#/entities/Notification" },
          "description": "Stores notifications for users."
        }
      }
    ]
  }
}
